<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sudoku.main.MenuController">
    <children>
        <Label text="Sudoku" />
        <VBox alignment="CENTER" fx:id="buttons_layout">
            <Button fx:id="new_game_button" text="Start new game" onAction="#StartNewGame"/>
            <Button fx:id="continue_button" text="Continue last game"/>
            <Button fx:id="exit_button" text="Exit game"/>
        </VBox>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
